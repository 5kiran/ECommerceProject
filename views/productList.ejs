  <style>
    * {
      margin: 0;
      padding: 0;
    }
    html,
    body {
      width: 100%;
      height: 100%;
    }
    body {
      background-image: radial-gradient(
        circle farthest-corner at 10% 20%,
        rgba(255, 209, 67, 1) 0%,
        rgba(255, 145, 83, 1) 90%
      );
      background-repeat: repeat;
      background-size: auto;
    }
    .card-img-top {
      width: 287px;
      height: 260px;
    }
    .col-sm-3 {
      margin-top: 20px;
    }
    .flex_center {
      display: flex;
      align-items: center;
      justify-content: center;
      margin-top: 20px;
    }
    .card-text {
      display: -webkit-box;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 1;
      overflow: hidden;
    }
  </style>
  <body>
    <% if(admin) { %> <%- include('adminlogoutheader.ejs') %> <% } else
    if(login) { %> <%- include('logoutheader.ejs') %> <% } else { %>
